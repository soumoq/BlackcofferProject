<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:padding = "10dp"
    android:weightSum = "1">
    <ImageView
        android:layout_width = "wrap_content"
        android:layout_marginTop="9dp"
        android:layout_height = "wrap_content"
        android:id="@+id/reorder"
        android:src = "@drawable/ic_baseline_reorder_24" />

    <TextView
        android:id = "@+id/action_ber_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="-7dp"
        android:textColor="#717D7E "
        android:text = "#tags"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/reorder"
        android:textStyle = "bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#717D7E "
        android:id="@+id/location"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-3dp"
        android:layout_below="@+id/action_ber_name"
        android:layout_toRightOf="@+id/location_img"
        android:text="West Bengal"/>

    <ImageView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id="@+id/location_img"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/reorder"
        android:layout_below="@+id/action_ber_name"
        android:src = "@drawable/ic_baseline_location_on_24" />

    <ImageView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="9dp"
        android:layout_alignParentRight="true"
        android:src = "@drawable/ic_baseline_notifications_24" />
</RelativeLayout>