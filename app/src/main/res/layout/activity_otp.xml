<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <TextView
        android:id="@+id/otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Just a quick security check"
        android:textColor="#000000"
        android:textSize="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_text"
        android:id="@+id/otp_instruction"
        android:layout_centerHorizontal="true"
        android:text="Please enter the vitrifaction code we sent you.\nIt mite take few minutes to receive your code "/>


    <TextView
        android:id="@+id/enterVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_instruction"
        android:layout_marginTop="44dp"
        android:textSize="19dp"
        android:layout_marginLeft="20dp"
        android:text="Enter variation code" />

    <EditText
        android:id="@+id/opt_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/explore_search_style"
        android:fontFamily="serif"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_below="@+id/enterVC"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/do_not_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_edit_text"
        android:layout_marginLeft="100dp"
        android:text="Don't received the code? "/>

    <TextView
        android:id="@+id/send_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send again"
        android:layout_toRightOf="@+id/do_not_receive"
        android:layout_below="@+id/opt_edit_text"
        />

    <Button
        android:id="@+id/otp_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_edit_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/main_activity_button"
        android:text="Verify code"
        android:textAllCaps="false"
        android:textColor="#FDFEFE" />
</RelativeLayout>